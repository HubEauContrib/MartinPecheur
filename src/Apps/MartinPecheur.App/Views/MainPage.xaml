<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:HubEauContrib.MartinPecheur.App.Models"
             xmlns:viewmodels="clr-namespace:HubEauContrib.MartinPecheur.App.ViewModels"
             x:DataType="viewmodels:MainViewModel"
             x:Class="MartinPecheur.App.Views.MainPage">

    <RefreshView Command="{Binding ListRiversCommand}" IsRefreshing="True">
        <CollectionView ItemsSource="{Binding Rivers}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:River">
                    <HorizontalStackLayout Padding="10">
                        <Label VerticalOptions="Center" Text="{Binding Path=Name}"/>
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </RefreshView>

</ContentPage>
